{
  "name": "uvb",
  "version": "1.1.0",
  "description": "an example for deploying a React + NodeJS app to Heroku",
  "main": "server.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack-dev-server --hot --inline",
    "dev:server": "node -r dotenv/config server.js",
    "lint": "eslint src/**/*.js*",
    "lint:watch": "esw -w src/**",
    "review": "npm run lint && npm test",
    "start": "npm run build && NODE_ENV=production node server.js",
    "test": "jest src/**",
    "test:watch": "jest src/** --watch",
    "test:watchAll": "jest src/** --watchAll",
    "test:coverage:report": "open coverage/lcov-report/index.html",
    "db:migrate": "knex --knexfile ./src/backend/db/knexfile.js --cwd . migrate:latest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.18.3",
    "connect-ensure-login": "^0.1.1",
    "css-loader": "^3.5.2",
    "enzyme-adapter-react-16": "^1.7.1",
    "express": "^4.16.4",
    "express-session": "^1.17.1",
    "knex": "^0.20.15",
    "moment": "^2.23.0",
    "node-sass": "^4.13.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "pg": "^7.18.2",
    "prop-types": "^15.6.2",
    "raf": "^3.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sass-loader": "^8.0.2",
    "sqlite3": "^4.1.0",
    "style-loader": "^1.1.4",
    "webpack": "^4.42.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "dotenv": "^8.2.0",
    "enzyme": "^3.8.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-watch": "^6.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.13.1",
    "sinon": "^8.1.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.10.3",
    "webpack-hot-middleware": "^2.24.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "moduleNameMapper": {
      "^.+.(css|scss|sass)$": "<rootDir>/test/config/cssStub.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/test/testConfig.js",
    "setupFiles": [
      "raf/polyfill"
    ]
  }
}
